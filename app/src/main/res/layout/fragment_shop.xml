<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/info"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score: "
                android:textColor="@color/quantum_brown500"
                android:textSize="30dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/quantum_brown500"
                android:textStyle="bold"
                android:textSize="30dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header"
            android:orientation="vertical"
            android:layout_marginTop="15dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:id="@+id/paper_1"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/paper_s"/>
                <TextView
                    android:id="@+id/pprice_1"
                    android:layout_width="120dp"
                    android:layout_height="120dp"

                    android:layout_toRightOf="@+id/paper_1"
                    android:textColor="@color/quantum_brown500"
                    android:gravity="center"
                    android:text="10000"
                    android:textSize="30dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="15dp">
                <ImageView
                    android:id="@+id/rock_1"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/rock_r"
                    />
                <TextView
                    android:id="@+id/rprice_1"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_toRightOf="@+id/rock_1"
                    android:gravity="center"
                    android:textColor="@color/quantum_brown500"
                    android:text="80000"
                    android:textSize="30dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="15dp">
                <ImageView
                    android:id="@+id/scissor_1"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/edward_scissor"/>
                <TextView
                    android:id="@+id/sprice_1"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_toRightOf="@+id/scissor_1"
                    android:textColor="@color/quantum_brown500"
                    android:gravity="center"
                    android:text="20000"
                    android:textSize="30dp"/>

            </RelativeLayout>


        </LinearLayout>
    </RelativeLayout>
</ScrollView>